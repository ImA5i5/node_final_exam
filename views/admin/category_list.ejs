<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category List</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding: 40px 0;
        }
        .page-header {
            background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
            color: white;
            border-radius: 16px 16px 0 0;
            padding: 2rem;
            margin: -2rem -2rem 2rem -2rem;
        }
        .table img {
            border-radius: 8px;
        }
        .action-btn {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="card shadow-lg border-0">

        <!-- Header -->
        <div class="page-header text-center">
            <h2 class="mb-0 fw-bold">
                Category Management
            </h2>
            <p class="mb-0 mt-2 opacity-90">View and manage all product categories</p>
        </div>

        <div class="card-body p-4">

            <!-- Flash Messages -->
            <% if (success && success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="d-flex flex-wrap gap-3 mb-4">
                <a href="/category/add" class="btn btn-success">
                    Add New Category
                </a>
                <a href="/dashboard" class="btn btn-outline-secondary">
                    Back to Dashboard
                </a>
            </div>

            <!-- Categories Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>#</th>
                            <th>Category Name</th>
                            <th>Slug</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (categories && categories.length > 0) { %>
                            <% categories.forEach((cat, i) => { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td class="fw-semibold"><%= cat.name %></td>
                                    <td>
                                        <code class="bg-light px-2 py-1 rounded"><%= cat.slug %></code>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <!-- Edit -->
                                            <a href="/category/edit/<%= cat._id %>" 
                                               class="btn btn-warning btn-sm action-btn" 
                                               title="Edit Category">
                                                Edit
                                            </a>

                                            <!-- Permanent Delete (with confirmation) -->
                                            <button type="button" 
                                                    class="btn btn-danger btn-sm action-btn" 
                                                    title="Delete Permanently"
                                                    onclick="confirmDelete('/category/delete/<%= cat._id %>')">
                                                Delete
                                            </button>

                                            <!-- Soft Delete -->
                                            <a href="/category/Sdelete/<%= cat._id %>" 
                                               class="btn btn-secondary btn-sm action-btn" 
                                               title="Soft Delete"
                                               onclick="return confirm('Soft delete this category?\nProducts will remain but be unassigned.')">
                                                Soft Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <i class="bi bi-folder-x display-1 text-muted d-block mb-3"></i>
                                    <h5>No categories found</h5>
                                    <a href="/category/add" class="btn btn-success mt-3">
                                        Add Your First Category
                                    </a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Confirm permanent delete
    function confirmDelete(url) {
        if (confirm('PERMANENTLY delete this category?\n\nThis will also remove it from all products.\nThis action CANNOT be undone.')) {
            window.location.href = url;
        }
    }

    // Auto-dismiss alerts
    document.querySelectorAll('.alert').forEach(alert => {
        setTimeout(() => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }, 4000);
    });
</script>

</body>
</html>