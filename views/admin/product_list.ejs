<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding: 40px 0;
        }
        .table img {
            border-radius: 8px;
            object-fit: cover;
        }
        .action-btn {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 16px 16px 0 0;
            padding: 2rem;
            margin: -2rem -2rem 2rem -2rem;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="card shadow-lg border-0">
        
        <!-- Header -->
        <div class="page-header text-center">
            <h2 class="mb-0 fw-bold">
                Product List
            </h2>
            <p class="mb-0 mt-2 opacity-90">Manage all products in your store</p>
        </div>

        <div class="card-body p-4">

            <!-- Flash Messages -->
            <% if (success && success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <%= success[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <%= error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="d-flex flex-wrap gap-3 mb-4">
                <a href="/product/add" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Product
                </a>
                <a href="/dashboard" class="btn btn-secondary">
                    <i class="bi bi-house-door me-2"></i>Back to Dashboard
                </a>
            </div>

            <!-- Responsive Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (product && product.length > 0) { %>
                            <% product.forEach((item, i) => { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td>
                                        <% if (item.image) { %>
                                            <img src="/uploads/<%= item.image %>" 
                                                 alt="<%= item.name %>" 
                                                 width="60" height="60" 
                                                 class="border shadow-sm">
                                        <% } else { %>
                                            <div class="bg-light border rounded d-flex align-items-center justify-content-center" 
                                                 style="width:60px;height:60px;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td class="fw-semibold"><%= item.name %></td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            <%= item.category?.name || 'No Category' %>
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <%= item.description ? item.description.substring(0, 50) + '...' : 'No description' %>
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/product/edit/<%= item._id %>" 
                                               class="btn btn-warning btn-sm action-btn" 
                                               title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            
                                            <!-- Delete with Confirmation -->
                                            <button type="button" 
                                                    class="btn btn-danger btn-sm action-btn" 
                                                    title="Delete"
                                                    onclick="confirmDelete('/product/delete/<%= item._id %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>

                                            <!-- Soft Delete -->
                                            <a href="/product/softDelete/<%= item._id %>" 
                                               class="btn btn-secondary btn-sm action-btn" 
                                               title="Soft Delete"
                                               onclick="return confirm('Are you sure you want to soft delete this product?')">
                                                <i class="bi bi-archive"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox display-1 d-block mb-3"></i>
                                    <h5>No products found</h5>
                                    <a href="/product/add" class="btn btn-primary mt-3">Add Your First Product</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Empty State (if needed) -->
            <% if (!product || product.length === 0) { %>
                <div class="text-center py-5">
                    <p class="text-muted">Start by adding your first product!</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Confirm before permanent delete
    function confirmDelete(url) {
        if (confirm('Are you sure you want to PERMANENTLY delete this product?\nThis action cannot be undone.')) {
            window.location.href = url;
        }
    }

    // Auto-dismiss alerts after 4 seconds
    document.querySelectorAll('.alert').forEach(alert => {
        setTimeout(() => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }, 4000);
    });
</script>

</body>
</html>