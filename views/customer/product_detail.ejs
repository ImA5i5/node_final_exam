<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - MyStore</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }
        .product-image {
            height: 500px;
            object-fit: cover;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            transition: transform 0.4s ease;
        }
        .product-image:hover {
            transform: scale(1.02);
        }
        .detail-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .price-badge {
            font-size: 2rem;
            font-weight: 700;
            color: #28a745;
        }
        .btn-add-cart {
            background: linear-gradient(135deg, #28a745, #20c997);
            border: none;
            padding: 14px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
        }
        .btn-add-cart:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 30px rgba(40,167,69,0.4);
        }
        .category-badge {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.9rem;
        }
        .back-btn {
            border-radius: 50px;
            padding: 10px 25px;
            font-weight: 500;
        }
        .description {
            line-height: 1.8;
            color: #444;
            font-size: 1.05rem;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="/">MyStore</a>
            <a href="/Customer/get" class="btn btn-outline-light back-btn">
                Back to Products
            </a>
        </div>
    </nav>

    <div class="container py-5 my-4">
        <div class="row g-5">
            <!-- Product Image -->
            <div class="col-lg-6">
                <div class="text-center">
                    <% if (product.image) { %>
                        <img src="/uploads/<%= product.image %>" 
                             alt="<%= product.name %>" 
                             class="product-image img-fluid">
                    <% } else { %>
                        <div class="d-flex align-items-center justify-content-center bg-light rounded-4" 
                             style="height: 500px;">
                            <i class="bi bi-image fs-1 text-muted"></i>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-lg-6">
                <div class="detail-card p-5">
                    <div class="mb-4">
                        <% if (product.category) { %>
                            <span class="category-badge">
                                <%= product.category.name %>
                            </span>
                        <% } %>
                    </div>

                    <h1 class="display-5 fw-bold mb-3"><%= product.name %></h1>

                    <!-- You can add price here later -->
                    <!-- <div class="price-badge mb-4">$<%= product.price || '99.99' %></div> -->

                    <div class="description mb-5">
                        <p>
                            <%= product.description || 'No description available for this product.' %>
                        </p>
                    </div>

                    <div class="d-flex flex-column gap-3">
                        <button class="btn btn-success btn-add-cart text-white">
                            Add to Cart
                        </button>

                        <div class="d-flex gap-4 justify-content-center text-muted">
                            <div class="text-center">
                                <i class="bi bi-truck fs-3"></i>
                                <p class="small mt-2 mb-0">Free Delivery</p>
                            </div>
                            <div class="text-center">
                                <i class="bi bi-shield-check fs-3"></i>
                                <p class="small mt-2 mb-0">1 Year Warranty</p>
                            </div>
                            <div class="text-center">
                                <i class="bi bi-arrow-counterclockwise fs-3"></i>
                                <p class="small mt-2 mb-0">30-Day Returns</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products Section (Optional future feature) -->
        <!-- <div class="mt-5">
            <h3 class="mb-4">You might also like</h3>
            <div class="row g-4">
                ... related products ...
            </div>
        </div> -->
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-5 mt-5">
        <div class="container">
            <p class="mb-1">&copy; 2025 MyStore. All rights reserved.</p>
            <p class="small text-white-50">Your trusted online shopping destination</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional: Add to cart animation -->
    <script>
        document.querySelector('.btn-add-cart')?.addEventListener('click', function() {
            this.innerHTML = 'Added to Cart!';
            this.classList.remove('btn-success');
            this.classList.add('btn-warning');
            setTimeout(() => {
                this.innerHTML = 'Add to Cart';
                this.classList.remove('btn-warning');
                this.classList.add('btn-success');
            }, 2000);
        });
    </script>
</body>
</html>